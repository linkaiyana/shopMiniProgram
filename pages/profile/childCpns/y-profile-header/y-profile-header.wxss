/* pages/profile/childCpns/y-profile-header/y-profile-header.wxss */
.header {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 40rpx 0;
  box-sizing: border-box;
  height: 200rpx;
  background-color: #ff69b4;
}
.wrap {
  display: flex;
}
.h-img {
  margin-right: 30rpx;
}
.h-img .img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #f2f2f2;
}
.message {
  color: #fff;
}
.message .img {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}
.message .info {
  font-size: 36rpx;
  margin-top: 20rpx;
}
.icon {
  position: relative;
  right: -50rpx;
}
.icon .img {
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
}